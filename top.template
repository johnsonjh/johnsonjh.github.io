            }

            ol {
                counter-reset: item;
            }

            ol li {
                align-items: flex-start;
                counter-increment: item;
                display: flex;
                list-style: none;
                margin-left: 0;
                padding-left: 0em;
            }

            ol li::before {
                content: counter(item) ". ";
                font-feature-settings: "onum";
