            :root {
                --bg-dark: #192021;
                --bg-light: #e0d3af;
                --text-dark: #e0d3af;
                --text-light: #09162d;
            }

            html,
            body {
                -webkit-text-size-adjust: none;
                text-size-adjust: none;
                z-index: 0;
                position: relative;
                background: var(--bg-light);
                color: var(--text-light);
                transition:
                    background 0.01s,
                    color 0.01s;
            }

            body::before {
                background: url("bg.png") no-repeat center top;
                background-size: cover;
                content: "";
                height: 100%;
                left: 0;
                opacity: 0.04;
                position: fixed;
                top: 0;
                width: 100%;
                z-index: -1;
                pointer-events: none;
            }

            html.dark-mode,
            html.dark-mode body {
                background: var(--bg-dark);
                color: var(--text-dark);
            }

            .red,
            .error,
            .danger {
                color: red !important;
            }

            html.dark-mode #theme-toggle {
                color: #bfb66e;
            }

            #theme-toggle {
                background: none;
                border: none;
                color: #000;
                cursor: pointer;
                font-size: clamp(4vw, 4vw, 3rem);
                position: fixed;
                right: 0.4em;
                top: 0.3em;
                z-index: 1000;
            }

            html.notransition *,
            html.notransition {
                transition: none !important;
            }

            .symbola {
