    .tooltip::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 0%;
        width: 100%;
        height: 2px;
        background-color: currentColor;
        transform: scaleX(0);
        transform-origin: center;
        transition: transform 0.3s ease;
    }

