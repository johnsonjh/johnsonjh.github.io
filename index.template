<script>
    function updateImagesForTheme() {
        const isDark = document.documentElement.classList.contains("dark-mode");
        document.querySelectorAll("img[data-src-light][data-src-dark]").forEach((img) => {
            const newSrc = isDark ? img.dataset.srcDark : img.dataset.srcLight;
            if (img.src !== newSrc) {
                img.src = newSrc;
            }
        });
    }

    updateImagesForTheme();

    const observer = new MutationObserver(() => updateImagesForTheme());
    observer.observe(document.documentElement, {attributes: true, attributeFilter: ["class"]});
</script>
